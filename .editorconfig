# Top-most EditorConfig file
root = true

# Apply to every file.
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{js, ts}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.html]
charset = utf-8
indent_style = space
indent_size = 4

[*.cs]
charset = utf-8
indent_style = space
indent_size = 4